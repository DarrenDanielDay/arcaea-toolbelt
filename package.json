{
  "name": "arcaea-toolbelt",
  "version": "0.0.0",
  "type": "module",
  "targets": {
    "tools": {
      "source": [
        "src/tools/index.html"
      ]
    },
    "default": {
      "context": "browser",
      "scopeHoist": false,
      "source": [
        "src/index.html",
        "src/docs/plugin-usage.html",
        "src/docs/mumu-adb.html",
        "src/services/cross-site-script.ts",
        "src/services/cross-site-frame.html"
      ],
      "distDir": "./arcaea-toolbelt",
      "outputFormat": "esmodule"
    }
  },
  "browserslist": "Chrome 100",
  "scripts": {
    "start:tools": "parcel --target tools --dist-dir dist-tools --port 1236",
    "start:parcel": "parcel --target default --hmr-host localhost --hmr-port 1235",
    "start:sheetly": "sheetly watch --dir src --hmr parcel",
    "start": "run-p --print-label \"start:**\"",
    "purge": "node ./scripts/purge.js",
    "build:parcel": "parcel build --target default --no-optimize --public-url /arcaea-toolbelt --reporter @parcel/reporter-bundle-analyzer",
    "build:sheetly": "sheetly build --dir src",
    "build": "run-s purge build:sheetly build:parcel"
  },
  "private": true,
  "@parcel/resolver-default": {
    "packageExports": true
  },
  "devDependencies": {
    "@parcel/reporter-bundle-analyzer": "^2.9.3",
    "@parcel/transformer-inline-string": "^2.9.3",
    "@parcel/transformer-typescript-tsc": "^2.9.3",
    "@types/bootstrap": "^5.2.6",
    "@types/sql.js": "^1.4.4",
    "buffer": "^6.0.3",
    "crypto-browserify": "^3.12.0",
    "events": "^3.3.0",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.9.3",
    "path-browserify": "^1.0.1",
    "process": "^0.11.10",
    "purgecss": "^5.0.0",
    "stream-browserify": "^3.0.0",
    "typed-query-selector": "^2.11.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "bootstrap": "^5.3.1",
    "classic-di": "^0.3.0",
    "html2canvas": "^1.4.1",
    "hyplate": "^0.19.3",
    "sheetly": "^0.5.0",
    "sql.js": "^1.8.0",
    "tslib": "^2.6.2"
  }
}
