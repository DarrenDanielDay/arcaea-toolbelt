{
  "name": "arcaea-toolbelt",
  "version": "0.0.0",
  "scripts": {
    "start:parcel": "parcel src/index.html",
    "start:sheetly": "sheetly watch --dir src --hmr parcel",
    "start:cross-site": "node ./scripts/cross-site.js",
    "start": "run-p --print-label \"start:**\"",
    "purge": "node ./scripts/purge.js",
    "build:parcel": "parcel build src/index.html --public-url /arcaea-toolbelt --dist-dir arcaea-toolbelt --no-optimize --no-source-maps",
    "build:sheetly": "sheetly build --dir src",
    "build:cross-site": "node ./scripts/cross-site.js --build",
    "minify": "node ./scripts/minify.js",
    "build": "run-s purge build:sheetly build:parcel minify build:cross-site"
  },
  "private": true,
  "devDependencies": {
    "@parcel/transformer-inline-string": "^2.8.3",
    "@parcel/transformer-typescript-tsc": "^2.8.3",
    "esbuild": "^0.17.18",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.8.3",
    "purgecss": "^5.0.0",
    "typed-query-selector": "^2.10.1",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@fluentui/web-components": "^2.5.14",
    "sheetly": "^0.3.0",
    "tslib": "^2.5.0"
  }
}
